{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccounts_mycdpstorageaccount_name": {
           "type": "string",
            "metadata": {
                "description" : "account"
            }
        },
        "location_infrastructure" : {
            "type": "string",
            "metadata": {
                "description": "location"
            }
        }
    },
    "variables": {
        "virtualNetworkName": "VirtualNetworkVPC"
    },
    "resources": [
        {
            "comments": "Generalized from resource: '/subscriptions/3c1acdbb-6c4a-4709-b589-1e6fe59ccd99/resourceGroups/andreyresourcegroup/providers/Microsoft.Storage/storageAccounts/mycdpstorageaccount'.",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccounts_mycdpstorageaccount_name')]",
            "apiVersion": "2017-06-01",
            "location": "[parameters('location_infrastructure')]",
            "tags": {},
            "scale": null,
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Allow",
                    "ipRules": [],
                    "virtualNetworkRules": []
                },
                "supportsHttpsTrafficOnly": false
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "location": "[parameters('location_infrastructure')]",
            "tags": {
                "displayName": "[variables('virtualNetworkName')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "Subnet-1",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "Subnet-2",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "networkSecurityGroupName",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "all-from-epam",
                        "properties": {
                            "description": "all-from-epam",
                            "protocol": "*",
                            "sourcePortRange": "0-65535",
                            "destinationPortRange": "0-65535",
                            "sourceAddressPrefix": "89.162.0.0/16",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ]
        }
    ]
}